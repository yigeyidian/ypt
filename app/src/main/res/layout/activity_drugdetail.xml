<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tanglang.ypt.activity.BannerActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/titleBackColor"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/drug_iv_back"
            style="@style/BackImageButtonStyle" />

        <TextView
            android:id="@+id/banner_tv_title"
            style="@style/TitleTextViewStyle"
            android:text="药品详情" />

        <Button
            android:id="@+id/drug_iv_share"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:background="@drawable/share_selector" />

        <Button
            android:id="@+id/drug_iv_favor"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@id/drug_iv_share"
            android:background="@drawable/favor_selector" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/drug_context"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
