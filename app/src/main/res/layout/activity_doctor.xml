<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.tanglang.ypt.activity.BannerActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/titleBackColor"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/doctor_iv_back"
            style="@style/BackImageButtonStyle" />

        <TextView
            style="@style/TitleTextViewStyle"
            android:text="咨询医生" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/doctor_iv_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/rect_rand"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:src="@mipmap/ic_man_press" />

        <ImageView
            android:id="@+id/doctor_iv_woman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/rect_rand"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:src="@mipmap/ic_woman_normal" />
    </LinearLayout>

    <EditText
        android:id="@+id/doctor_et_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/rect_edit"
        android:hint="请输入年龄"
        android:inputType="number"
        android:padding="8dp"
        android:singleLine="true"
        android:textColorHint="@color/spacingColor"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/doctor_et_text"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rect_edit"
        android:gravity="left|top"
        android:hint="请输入咨询内容"
        android:inputType="textMultiLine"
        android:padding="8dp"
        android:singleLine="false"
        android:textColorHint="@color/spacingColor"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:text="(不少于10个字)"
        android:textColor="@color/fontColor" />

    <Button
        android:id="@+id/doctor_bt_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/send_bt_selector"
        android:text="发送"
        android:textColor="@color/send_textcolor"
        android:textSize="16sp" />

</LinearLayout>
