<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/drugdetail_image"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="centerInside" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/drugdetail_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="小儿肺热合川口服液"
                        android:textColor="@color/titleBackColor"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/drugdetail_company"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:singleLine="true"
                        android:text="小儿肺热合川口服液"
                        android:textColor="@color/fontColor"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/drugdetail_intro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:maxLines="2"
                        android:text="小儿肺热合川口服液小儿肺热合川口服液小儿肺热合川口服液小儿肺热合川口服液小儿肺热合川口服液"
                        android:textColor="@color/fontColor"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <RatingBar
                            android:id="@+id/drugdetail_rate"
                            style="@style/RatingBarStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:numStars="5"
                            android:rating="2" />

                        <LinearLayout
                            android:id="@+id/drugdetail_other"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:orientation="horizontal" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <TextView style="@style/SpaceLineStyle" />

            <RadioGroup
                android:id="@+id/drugdetail_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    style="@style/RadioButtonStyle"
                    android:text="价格" />

                <RadioButton
                    style="@style/RadioButtonStyle"
                    android:text="点评" />

                <RadioButton
                    style="@style/RadioButtonStyle"
                    android:text="咨询" />

                <RadioButton
                    style="@style/RadioButtonStyle"
                    android:text="说明" />
            </RadioGroup>

            <TextView style="@style/SpaceLineStyle" />

            <android.support.v4.view.ViewPager
                android:id="@+id/drugdetail_pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/spacingColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/drugdetail_zixun"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/buy_selector"
            android:gravity="center"
            android:singleLine="true"
            android:text="我要咨询"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <Button
            android:id="@+id/drugdetail_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/buy_selector"
            android:gravity="center"
            android:singleLine="true"
            android:text="最低价"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>