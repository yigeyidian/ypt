<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="MainRadioButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/tab_item_color</item>
    </style>

    <style name="HomeButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/fontColor</item>
        <item name="android:background">#ffffff</item>
    </style>

    <style name="myProgressBarStyleLarge">
        　　
        <item name="android:indeterminateDrawable">@drawable/progress_image</item>
        　　
        <item name="android:minWidth">48dp</item>
        　　
        <item name="android:maxWidth">48dp</item>
        　　
        <item name="android:minHeight">48dp</item>
        　　
        <item name="android:maxHeight">48dp</item>
    </style>

    <style name="GridViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="BrandGridViewStyle" parent="GridViewStyle">
        <item name="android:numColumns">3</item>
    </style>

    <style name="DrugGridViewStyle" parent="GridViewStyle">
        <item name="android:numColumns">2</item>
    </style>

    <style name="BackImageViewStyle">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@mipmap/btn_header_back</item>
    </style>

    <style name="BackImageButtonStyle">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_marginTop">10dp</item>
        <!--<item name="android:layout_margin">10dp</item>-->
        <item name="android:background">#00000000</item>
        <item name="android:src">@drawable/back_selector</item>
    </style>

    <style name="TitleTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RadioButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/tabber_selector</item>
    </style>

    <style name="SpaceLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1sp</item>
        <item name="android:background">@color/spacingColor</item>
    </style>

    <style name="RatingBarStyle" parent="android:Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_full_material</item>
        <item name="android:indeterminateDrawable">@drawable/ratingbar_full_material</item>
    </style>


</resources>
